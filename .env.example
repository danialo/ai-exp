# Database paths
RAW_STORE_DB_PATH=data/raw_store.db
VECTOR_INDEX_PATH=data/vector_index/

# Embedding configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# OPENAI_API_KEY=your_key_here  # Required for LLM chat responses

# LLM configuration (for chat responses)
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500

# Retrieval parameters
TOP_K_RETRIEVAL=5
RECENCY_WEIGHT=0.2
SEMANTIC_WEIGHT=0.8

# Belief-memory retrieval configuration
BELIEF_MEMORY_WEIGHT=0.7  # Weight for beliefs in self-queries (default: 0.7)
MEMORY_WEIGHT=0.3  # Weight for memories in self-queries (default: 0.3)
BELIEFS_INDEX_PATH=data/vector_index_beliefs/  # Path to beliefs vector index

# Affect blending weights (user, memory, self)
AFFECT_WEIGHTS=0.5,0.3,0.2

# Web search and browsing configuration
# SERPAPI_API_KEY=your_serpapi_key_here  # Required for web search (get free key at serpapi.com)
BROWSER_HEADLESS=true  # Run browser in headless mode (default: true)
BROWSER_TIMEOUT_MS=30000  # Page load timeout in milliseconds (default: 30000)
BROWSER_SCREENSHOTS_ENABLED=false  # Capture screenshots when browsing (default: false)
BROWSER_SCREENSHOTS_PATH=persona_space/logs/screenshots  # Directory for screenshots (default: persona_space/logs/screenshots)
MAX_SEARCHES_PER_CONVERSATION=5  # Maximum searches per conversation (default: 5)
MAX_URL_FETCHES_PER_CONVERSATION=3  # Maximum URL fetches per conversation (default: 3)
WEB_CONTENT_MAX_LENGTH=10000  # Max characters for content interpretation (default: 10000)
