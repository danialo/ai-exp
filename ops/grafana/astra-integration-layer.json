{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Executive Loop Overview",
      "type": "row",
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0}
    },
    {
      "title": "Tick Duration (p95)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 1},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.5},
              {"color": "red", "value": 1.0}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(astra_tick_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(astra_tick_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        }
      ]
    },
    {
      "title": "Tick Count",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 1},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "targets": [
        {
          "expr": "astra_tick_count_total",
          "legendFormat": "Total Ticks"
        }
      ]
    },
    {
      "title": "Cognitive Load",
      "type": "gauge",
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 1},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.6},
              {"color": "red", "value": 0.8}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "astra_cognitive_load",
          "legendFormat": "Cognitive Load"
        }
      ]
    },
    {
      "title": "Focus Stack Size",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 1},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "red", "value": 7}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "astra_focus_stack_size",
          "legendFormat": "Focus Items"
        }
      ]
    },
    {
      "title": "Arousal Level",
      "type": "gauge",
      "gridPos": {"h": 4, "w": 4, "x": 20, "y": 1},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "blue", "value": null},
              {"color": "green", "value": 0.3},
              {"color": "yellow", "value": 0.7},
              {"color": "red", "value": 0.9}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "astra_arousal_level",
          "legendFormat": "Arousal"
        }
      ]
    },
    {
      "title": "Budgets & Resources",
      "type": "row",
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9}
    },
    {
      "title": "Token Budget",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "targets": [
        {
          "expr": "astra_budget_tokens_available",
          "legendFormat": "Available"
        },
        {
          "expr": "astra_budget_tokens_used",
          "legendFormat": "Used (this minute)"
        }
      ]
    },
    {
      "title": "Beliefs Formed Today",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 10},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 8},
              {"color": "red", "value": 10}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "astra_beliefs_formed_today",
          "legendFormat": "Beliefs"
        }
      ]
    },
    {
      "title": "Identity Drift",
      "type": "gauge",
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 10},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.15},
              {"color": "red", "value": 0.25}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "astra_anchor_drift",
          "legendFormat": "Anchor Drift"
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 39,
  "tags": ["astra", "integration-layer"],
